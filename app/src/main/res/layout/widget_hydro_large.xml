<?xml version="1.0" encoding="utf-8"?>
<!-- Large Widget Layout (2x4) - Material 3 Design with Quick Actions -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background_m3"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <!-- Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HydroTracker"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Percentage Badge -->
            <TextView
                android:id="@+id/widget_progress_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textSize="26sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Progress Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <!-- Progress Text Row with Last Updated -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <!-- Progress Text -->
                <TextView
                    android:id="@+id/widget_progress_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0ml / 2,700ml"
                    android:textSize="17sp"
                    android:fontFamily="sans-serif" />

                <!-- Last Updated -->
                <TextView
                    android:id="@+id/widget_last_updated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Updated 15:35"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:alpha="0.7"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Linear Progress Bar -->
            <ProgressBar
                android:id="@+id/widget_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:progressDrawable="@drawable/widget_progress_m3"
                android:max="100"
                android:progress="0" />

        </LinearLayout>

        <!-- Quick Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:baselineAligned="false">

            <!-- 250ml Button -->
            <LinearLayout
                android:id="@+id/widget_btn_250"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:minHeight="56dp"
                android:padding="12dp"
                android:background="@drawable/widget_button_background"
                android:layout_marginEnd="5dp">

                <TextView
                    android:id="@+id/widget_btn_250_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="250ml"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- 300ml Button -->
            <LinearLayout
                android:id="@+id/widget_btn_300"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:minHeight="56dp"
                android:padding="12dp"
                android:background="@drawable/widget_button_background"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">

                <TextView
                    android:id="@+id/widget_btn_300_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300ml"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- 500ml Button -->
            <LinearLayout
                android:id="@+id/widget_btn_500"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:minHeight="56dp"
                android:padding="12dp"
                android:background="@drawable/widget_button_background"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">

                <TextView
                    android:id="@+id/widget_btn_500_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500ml"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- 1L Button -->
            <LinearLayout
                android:id="@+id/widget_btn_1l"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:minHeight="56dp"
                android:padding="12dp"
                android:background="@drawable/widget_button_background"
                android:layout_marginStart="5dp">

                <TextView
                    android:id="@+id/widget_btn_1l_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1L"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
