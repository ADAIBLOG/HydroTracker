<?xml version="1.0" encoding="utf-8"?>
<!-- 2x1 Compact Widget Layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/widget_background_m3"
    android:gravity="center_vertical">

    <!-- Circular Progress Indicator -->
    <RelativeLayout
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp">

        <ProgressBar
            android:id="@+id/widget_progress_circle"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:progressDrawable="@drawable/widget_circular_progress_small"
            android:background="@drawable/widget_circular_progress_background_small"
            android:max="100"
            android:progress="44" />

        <!-- Percentage Text -->
        <TextView
            android:id="@+id/widget_progress_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="44%"
            android:textSize="10sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- Progress Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Progress Text -->
        <TextView
            android:id="@+id/widget_progress_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.2L / 2.7L"
            android:textSize="11sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Last Updated -->
        <TextView
            android:id="@+id/widget_last_updated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="14:30"
            android:textSize="9sp"
            android:alpha="0.7"
            android:maxLines="1" />

    </LinearLayout>

</LinearLayout>