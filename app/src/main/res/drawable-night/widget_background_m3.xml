<?xml version="1.0" encoding="utf-8"?>
<!-- Widget background for dark mode (Android 11 and below) -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Material 3 rounded corners -->
    <corners android:radius="@dimen/widget_corner_radius" />

    <!-- Surface container color (dark) -->
    <solid android:color="@color/widget_surface_container_dark" />

    <!-- Subtle outline -->
    <stroke
        android:width="1dp"
        android:color="@color/widget_outline_variant_dark" />

</shape>
