<?xml version="1.0" encoding="utf-8"?>
<!-- Widget button background for dark mode (Android 11 and below) -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/widget_primary_dark">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/widget_button_corner_radius" />
            <solid android:color="@color/widget_surface_dark" />
            <stroke
                android:width="1dp"
                android:color="@color/widget_outline_variant_dark" />
        </shape>
    </item>
</ripple>
