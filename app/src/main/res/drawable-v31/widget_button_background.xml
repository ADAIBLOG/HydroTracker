<?xml version="1.0" encoding="utf-8"?>
<!-- Widget button background for Android 12-13 with dynamic colors -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@android:color/system_accent2_800">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/widget_button_corner_radius" />
            <!-- SecondaryContainer equivalent -->
            <solid android:color="@android:color/system_accent2_100" />
        </shape>
    </item>
</ripple>
