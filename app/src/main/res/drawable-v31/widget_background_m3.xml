<?xml version="1.0" encoding="utf-8"?>
<!-- Material 3 Dynamic Colors for Android 12+ -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Material 3 rounded corners -->
    <corners android:radius="20dp" />
    
    <!-- Dynamic surface container color -->
    <solid android:color="@android:color/system_accent3_100" />
    
    <!-- Subtle border using outline variant -->
    <stroke
        android:width="1dp"
        android:color="@android:color/system_neutral2_200" />
        
</shape>