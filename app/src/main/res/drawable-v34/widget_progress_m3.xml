<?xml version="1.0" encoding="utf-8"?>
<!-- Progress bar drawable for Android 14+ with semantic dynamic colors -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Track (background) - SecondaryContainer -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/widget_progress_bar_corner" />
            <solid android:color="@android:color/system_secondary_container_light" />
        </shape>
    </item>

    <!-- Progress (foreground) - Primary -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/widget_progress_bar_corner" />
                <solid android:color="@android:color/system_primary_light" />
            </shape>
        </clip>
    </item>

</layer-list>
