<?xml version="1.0" encoding="utf-8"?>
<!-- Progress bar drawable for Android 11 and below -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Track (background) -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/widget_progress_bar_corner" />
            <solid android:color="@color/widget_progress_track_light" />
        </shape>
    </item>

    <!-- Progress (foreground) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/widget_progress_bar_corner" />
                <solid android:color="@color/widget_primary_light" />
            </shape>
        </clip>
    </item>

</layer-list>