<?xml version="1.0" encoding="utf-8"?>
<!-- Widget button background for Android 11 and below -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/widget_primary_light">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/widget_button_corner_radius" />
            <solid android:color="@color/widget_surface_light" />
            <stroke
                android:width="1dp"
                android:color="@color/widget_outline_variant_light" />
        </shape>
    </item>
</ripple>
